<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBE6"
    android:padding="16dp"
    tools:context=".QuizActivity">

    <TextView
        android:id="@+id/score_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:freezesText="true"
        android:text="Score: 0"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/questionNo_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/score_text_view"
        android:freezesText="true"
        android:text="Question: 1/x"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/timer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:freezesText="true"
        android:text="00:30"
        android:textColor="#000000"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/radio_group_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:freezesText="true"
        android:maxHeight="150dp"
        android:text="Here is the question\nHere is the question\nHere is the question"
        android:textColor="#000000"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/radio_group_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:freezesText="true">

        <RadioButton
            android:id="@+id/option_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:text="Option 1"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/option_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:text="Option 2"
            android:textColor="#000000" />


        <RadioButton
            android:id="@+id/option_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:text="Option 3"
            android:textColor="#000000" />


    </RadioGroup>

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_group_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"
        android:freezesText="true"
        android:text="Confirm"
        android:textColor="#FA71CD" />


</RelativeLayout>